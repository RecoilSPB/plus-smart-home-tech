@namespace("ru.yandex.practicum.kafka.telemetry.event")
protocol SensorEventProtocol {
  record ClimateSensor {
    int temperature_c;
    int humidity;
    int co2_level;
  }

  record LightSensor {
    int link_quality;
    int luminosity;
  }

  record MotionSensor {
    int link_quality;
    boolean motion;
    int voltage;
  }

  record SwitchSensor {
    boolean state;
  }

  record TemperatureSensor {
    string id;
    string hubId;
    long timestamp;
    int temperature_c;
    int temperature_f;
  }

  record SensorEvent {
    string id;
    string hubId;
    long timestamp;
    union {
      ClimateSensor,
      LightSensor,
      MotionSensor,
      SwitchSensor,
      TemperatureSensor
    } payload;
  }
}